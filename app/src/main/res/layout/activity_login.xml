<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context="div.appd.divfoodzdeliveryapp.LoginActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/headingViewLogin"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#caea39"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/headingView2"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="#caea39"
            android:text="LOGIN"
            android:textSize="40sp"
             />
        <EditText
            android:id="@+id/usernameField"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_text"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textColorHint="#A7B7C2"
            android:layout_marginTop="20dp"
            android:hint="Enter Username"/>

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:paddingStart="10dp"
            android:textColorHint="#A7B7C2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_text"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Enter Password"/>

        <ProgressBar
            android:id="@+id/progressBarLogin"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >


        <Switch
            android:id="@+id/saveDetailsSwitch"
            android:layout_width="266dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:text="Save Login Details"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
             />



        <Button
            android:id="@+id/loginButton"
            android:layout_width="304dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:backgroundTint="#35a306"
             />
    <Button
        android:id="@+id/signupButton"
        android:layout_width="304dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:text="Signup"
        android:textStyle="bold"
        android:backgroundTint="#35a306"
        />
</LinearLayout>

    </LinearLayout>

</ScrollView>
</LinearLayout>