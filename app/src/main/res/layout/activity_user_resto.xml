<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="div.appd.divfoodzdeliveryapp.UserRestoActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation ="vertical" >

                <TextView
                    android:id="@+id/user_resto_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center_vertical"
                    android:text="TextView"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                android:id="@+id/user_resto_cuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:gravity="left|center_vertical"
                android:text="Cuisines"
                android:textSize="22sp"
                android:textStyle="italic"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                android:id="@+id/user_resto_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                android:text="TextView"
                android:textSize="22sp"
                 />
                </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/user_resto_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:gravity="left|center_vertical"
                android:text="TextView"
                android:textSize="22sp"
                 />
        </LinearLayout>

            <ListView
                android:id="@+id/dishListRestoUser"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                >
            </ListView>
                <ProgressBar
                android:id="@+id/progressBarinUserResto"
                style="?android:attr/progressBarStyle"
                    android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
</LinearLayout>