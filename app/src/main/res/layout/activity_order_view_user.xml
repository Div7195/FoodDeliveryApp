<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parent_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context="div.appd.divfoodzdeliveryapp.OrderViewUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headingRestaurentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxWidth="350dp"
                android:singleLine="false"
                android:text="Restaurent Name:"
                android:textColor="#7ae1e7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurentAddressOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="Restaurent Full Address"
                android:inputType="textMultiLine"
                android:maxWidth="140dp"
                android:textColor="@color/white"
                android:singleLine="false"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxWidth="350dp"
                android:singleLine="false"
                android:text="Address to be delivered:"
                android:textSize="15sp"
                android:textColor="#f1fa4b"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/customerAddressOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_text"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textColorHint="#A7B7C2"
                android:layout_marginTop="20dp"
                android:hint="Enter Address"/>

            <Button
                android:id="@+id/setCurrentAddressButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:text="Set address as current location"

                android:textStyle="bold"
                android:backgroundTint="#98b3ef"
                />
<!--            <B-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="Order is "
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/statusOrderField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="Delivered"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/contactOfWhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxWidth="350dp"
                android:singleLine="false"
                android:textColor="#f1fa4b"
                android:text="Contact Of Customer:"
                android:textSize="15sp"
                android:textStyle="bold" />


            <!--            <TextView-->
            <!--                -->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:singleLine="false"-->
            <!--                android:maxWidth="350dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:gravity="left|center_vertical"-->
            <!--                android:text="19 b new grain mandi furniture industrial area kota rajasthan"-->
            <!--                android:textSize="18sp"-->
            <!--                android:textStyle="bold" />-->


            <TextView
                android:id="@+id/contactOfUserOrDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="9887482147"
                android:inputType="textMultiLine"
                android:maxWidth="140dp"
                android:textColor="@color/white"
                android:singleLine="false"
                android:textSize="18sp" />


            <ListView
                android:id="@+id/itemsOrderedList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"></ListView>

            <ProgressBar
                android:id="@+id/progressBarinOrderView"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/user_resto_cuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center_vertical"
                android:text="Bill Details"
                android:textColor="#f1fa4b"
                android:textSize="22sp"
                android:textStyle="bold"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Item Total"
                    android:textColor="#bfb6f7"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Rs."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/itemTotalField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetching.."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Fee"
                    android:textColor="#bfb6f7"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Rs."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/deliveryFeeField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="Fetching.."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="GST Charges"
                    android:textColor="#bfb6f7"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Rs."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/gstChargeField"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="Fetching.."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="22sp"
                    android:textColor="#bfb6f7"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Rs."
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/totalAmountField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="Fetching.."
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderedTimeField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="Ordered on 26 June 2023"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

            </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ratingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate Your Order"
                    android:textSize="22sp"
                    android:textColor="#f1fa4b"
                    android:textStyle="italic"></TextView>

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/ratingBarOrderVIew"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="rating"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/ratingSubmitButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:textSize="18sp"
                        android:text="Submit"
                        android:textStyle="bold"
                        android:backgroundTint="#35a306"
                        />
                <ProgressBar
                    android:id="@+id/loadingBesideRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/placeOrderSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/placeOrderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textSize="18sp"
                    android:text="Place order"
                    android:textStyle="bold"
                    android:backgroundTint="#35a306"
                    />

                <ProgressBar
                    android:id="@+id/loadingBesidePlaceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="5dp">

                </ProgressBar>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/getAssignedSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/getAssignedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textSize="18sp"
                    android:text="Place order"
                    android:textStyle="bold"
                    android:backgroundTint="#35a306"
                    />
                <ProgressBar
                    android:id="@+id/loadingBesideGetAssigned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="5dp">

                </ProgressBar>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pickedUpSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/pickedUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up"></Button>
                <ProgressBar
                    android:id="@+id/loadingBesidePickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="5dp">

                </ProgressBar>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveredSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/deliveredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"></Button>
                <ProgressBar
                    android:id="@+id/loadingBesideDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="5dp">

                </ProgressBar>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>