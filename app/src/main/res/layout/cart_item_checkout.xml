<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_text"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/veg_non_veg_cart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/veg" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="142dp"
        >

        <TextView
            android:id="@+id/checkout_dishname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:maxWidth="130dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_along_selection">

        <!-- Subtract Button -->

        <!-- Quantity Text -->
        <ImageButton
            android:id="@+id/subtract_button_checkout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="subtract"
            android:onClick="onSubtractButtonClicked"
            android:src="@drawable/baseline_horizontal_rule_25" />

        <TextView

            android:id="@+id/quantity_text_checkout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#35a306"
            android:textSize="22sp" />

        <!-- Add Button -->
        <ImageButton
            android:id="@+id/increment_item_button_checkout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="add"
            android:background="@android:color/transparent"
            android:onClick="onAddItemButtonClicked"
            android:src="@drawable/baseline_add_25" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/checkout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#f1fa4b"
            android:text="">

        </TextView>
    </LinearLayout>


</LinearLayout>