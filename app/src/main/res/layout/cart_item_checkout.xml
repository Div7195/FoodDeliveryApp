<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/food_item_border"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/veg" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="142dp"
        >
        <TextView
            android:id="@+id/checkout_dishname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:maxWidth="140dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:text="Paneer Butter fas"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_along_selection">

        <!-- Subtract Button -->
        <ImageButton
            android:id="@+id/subtract_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="subtract"
            android:onClick="onSubtractButtonClicked"
            android:src="@drawable/baseline_horizontal_rule_25" />

        <!-- Quantity Text -->
        <TextView

            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/addbuttoncolor"
            android:textSize="22sp" />

        <!-- Add Button -->
        <ImageButton
            android:id="@+id/increment_item_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="add"
            android:background="@android:color/transparent"
            android:onClick="onAddItemButtonClicked"
            android:src="@drawable/baseline_add_25" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginStart="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Rs.">

        </TextView>
        <TextView
            android:id="@+id/checkout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="70">

        </TextView>
    </LinearLayout>


</LinearLayout>